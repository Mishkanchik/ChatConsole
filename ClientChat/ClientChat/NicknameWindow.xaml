<Window Background="DarkBlue" x:Class="ClientChat.NicknameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Nickname" Height="150" Width="300">
    <Grid>
        <TextBlock DockPanel.Dock="Top" TextAlignment="Center" FontSize="13" Foreground="Bisque"  Margin="0,30,0,0" FontWeight="Bold" RenderTransformOrigin="0.5,0.342">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.401"/>
                    <RotateTransform Angle="0.21"/>
                    <TranslateTransform X="0.384" Y="-0.001"/>
                </TransformGroup>
            </TextBlock.RenderTransform>Enter your NickName</TextBlock>
        <TextBox Name="nicknameTextBox" VerticalAlignment="Center" HorizontalAlignment="Center" Width="200"/>
        <Button Name="OKButton" Content="OK" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,20" Width="75" Click="OKButton_Click"/>
    </Grid>
</Window>

